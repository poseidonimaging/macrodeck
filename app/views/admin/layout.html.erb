<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<title>
    <% if (@page_title.nil? || @page_title.blank?) && (@page_title_long.nil? || @page_title_long.blank?) %>
	RestlessNapkin
    <% elsif !@page_title_long.nil? %>
	<%=h @page_title_long %> : RestlessNapkin
    <% else %>
	<%=h @page_title %> : RestlessNapkin
    <% end %>
</title>
<!-- We need to emulate IE7 only when we are to use excanvas -->
<!--[if IE]>
<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
<![endif]-->

<link rel="shortcut icon" type="image/vnd.microsoft.icon" href="/favicon.ico" />
<link rel="icon" type="image/vnd.microsoft.icon" href="/favicon.ico" />

<!-- Main Stylesheet -->
<link rel="stylesheet" href="/stylesheets/administry/style.css" type="text/css" />
<link rel="stylesheet" href="/stylesheets/administry/red.css" type="text/css" />

<!--swfobject - needed only if you require <video> tag support for older browsers -->
<script type="text/javascript" src="/javascripts/administry/swfobject.js"></script>
<!-- jQuery with plugins -->
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
<script type="text/javascript" src="/javascripts/administry/jquery.ui.core.min.js"></script>
<script type="text/javascript" src="/javascripts/administry/jquery.ui.widget.min.js"></script>
<script type="text/javascript" src="/javascripts/administry/jquery.ui.tabs.min.js"></script>
<!-- jQuery tooltips -->
<script type="text/javascript" src="/javascripts/administry/jquery.tipTip.min.js"></script>
<!-- Superfish navigation -->
<script type="text/javascript" src="/javascripts/administry/jquery.superfish.min.js"></script>
<script type="text/javascript" src="/javascripts/administry/jquery.supersubs.min.js"></script>
<!-- jQuery form validation -->
<script type="text/javascript" src="/javascripts/administry/jquery.validate_pack.js"></script>
<!-- jQuery popup box -->
<script type="text/javascript" src="/javascripts/administry/jquery.nyroModal.pack.js"></script>
<!-- jQuery graph plugins -->
<!--[if IE]><script type="text/javascript" src="/javascripts/administry/flot/excanvas.min.js"></script><![endif]-->
<script type="text/javascript" src="/javascripts/administry/flot/jquery.flot.min.js"></script>

<!-- Internet Explorer Fixes -->
<!--[if IE]>
<link rel="stylesheet" type="text/css" media="all" href="/stylesheets/administry/ie.css"/>
<script src="/javascripts/administry/html5.js"></script>
<![endif]-->
<!--Upgrade MSIE5.5-7 to be compatible with MSIE8: http://ie7-js.googlecode.com/svn/version/2.1(beta3)/IE8.js -->
<!--[if lt IE 8]>
<script src="/javascripts/administry/IE8.js"></script>
<![endif]-->
</head>
<body>
	<!-- Header -->
	<header id="top">
		<div class="wrapper">
			<!-- Title/Logo - can use text instead of image -->
			<div id="title"><img src="/images/restless_napkin_feed_logo.png" alt="RestlessNapkin" /><!--<span>Administry</span> demo--></div>
			<!-- Top navigation -->
			<div id="topnav">
				<a href="#"><img class="avatar" src="/images/administry/user_32.png" alt="" /></a>
				Logged in as <b>Admin</b>
				<!--<span>|</span> <a href="#">Settings</a>
				<span>|</span> <a href="#">Logout</a><br />
				<small>You have <a href="#" class="high"><b>1</b> new message!</a></small>-->
			</div>
			<!-- End of Top navigation -->
			<!-- Main navigation -->
			<nav id="menu">
				<ul class="sf-menu">
				    <% unless @tab_buttons.nil? %>
					<% @tab_buttons.each do |tab| %>
					    <% if tab[2].nil? || tab[2].blank? %>
						<li><%= link_to tab[0], tab[1] %></li>
					    <% else %>
						<li class="<%= tab[2] %>"><%= link_to tab[0], tab[1] %></li>
					    <% end %>
					<% end %>
				    <% end %>
				</ul>
			</nav>
			<!-- End of Main navigation -->
			<!-- Aside links -->
			<aside>

			</aside>
			<!-- End of Aside links -->
		</div>
	</header>
	<!-- End of Header -->
	<!-- Page title -->
	<div id="pagetitle">
		<div class="wrapper">
			<h1>
			    <% if (@page_title.nil? || @page_title.blank?) && (@page_title_long.nil? || @page_title_long.blank?) %>
				RestlessNapkin
			    <% elsif !@page_title_long.nil? %>
				<%=h @page_title_long %>
			    <% else %>
				<%=h @page_title %>
			    <% end %>
			</h1>
		</div>
	</div>
	<!-- End of Page title -->

	<!-- Page content -->
	<div id="page">
		<!-- Wrapper -->
		<div class="wrapper">
		    <%= yield %>
		    
		    <p class="clear"></p>
		</div>
		<!-- End of Wrapper -->
	</div>
	<!-- End of Page content -->

	<!-- Page footer -->
	<footer id="bottom">
		<div class="wrapper">
			<nav>
			    <!--
				<a href="#">Dashboard</a> &middot;
				<a href="#">Content</a> &middot;
				<a href="#">Reports</a> &middot;
				<a href="#">Users</a> &middot;
				<a href="#">Media</a> &middot;
				<a href="#">Events</a> &middot;
				<a href="#">Newsletter</a> &middot;
				<a href="#">Settings</a>
			    -->
			</nav>
			<p>RestlessNapkin Admin 1Q 2011 "It's Finally Done"</p>
		</div>
	</footer>
	<!-- End of Page footer -->

	<!-- Animated footer -->
	<footer id="animated">
		<ul>
			<li><a href="#">Dashboard</a></li>
			<li><a href="#">Content</a></li>
			<li><a href="#">Reports</a></li>
			<li><a href="#">Users</a></li>
			<li><a href="#">Media</a></li>
			<li><a href="#">Events</a></li>
			<li><a href="#">Newsletter</a></li>
			<li><a href="#">Settings</a></li>
		</ul>
	</footer>
	<!-- End of Animated footer -->

	<!-- Scroll to top link -->
	<a href="#" id="totop">^ scroll to top</a>

<!-- Admin template javascript load -->
<script type="text/javascript" src="/javascripts/administry/administry.js"></script>
</body>
</html>
