<div class="box <%= "box-#{box_size}" %> <%= "altbox" if local_assigns[:altbox] %>">
	<div class="boxin">
		<div class="header">
			<h3><%= title %></h3>
			<% if local_assigns[:buttons] %>
			    <% buttons.each do |button| %>
				<%= link_to button[0], button[1], :class => "button" %>
			    <% end %>
			<% end %>
			<% if local_assigns[:green_buttons] %>
			    <% green_buttons.each do |button| %>
				<%= link_to button[0], button[1], :class => "green button" %>
			    <% end %>
			<% end %>
		</div>
		<div class="content">
			<%= '<div class="text">' if local_assigns[:text] %>
			    <%= body %>
			<%= '</div>' if local_assigns[:text] %>
		</div>
	</div>
</div>
