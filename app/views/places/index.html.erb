<% @start_item = 0 if @start_item.nil? %>

<ul>
    <%= render :partial => "place", :collection => @places, :locals => { :view_mode => :compact, :country => @country, :region => @region, :locality => @locality } %>
    <li class="alt">
	<% link_to country_region_locality_places_path(@country.id, @region.id, @locality.id, :start_item => (@start_item + 10)) do %>
	    <span class="name">Next Page</span>
	    <span class="arrow"></span>
	<% end %>
    </li>
    <% if @start_item > 0 %>
	<li class="alt">
	    <% link_to country_region_locality_places_path(@country.id, @region.id, @locality.id, :start_item => (@start_item - 10)) do %>
		<span class="name">Previous Page</span>
		<span class="arrow"></span>
	    <% end %>
	</li>
    <% end %>
</ul>