<div class="searchbox">
	<% form_tag("#{PLACES_FBURL}/search/#{params[:uuid]}/") do %>
		<p><%= text_field_tag "query", params[:query], :size => 40 %> <%= submit_tag "Search" %></p>
	<% end %>
</div>
<% if params[:query] %>
	<div class="filters">
		<p>Filter by: 
			<%= link_to "Places Only", "#{PLACES_FBURL}/search/#{params[:uuid]}/?query=#{params[:query]}&type=Place" %>
		</p>
	</div>
<% end %>
